<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RTCGlView">
        <attr name="mainMirror" format="boolean" />
        <attr name="secondMirror" format="boolean" />
        <attr name="mainCoords" format="reference" />
        <attr name="secondCoords" format="reference" />
    </declare-styleable>

    <declare-styleable name="SeekBarPreference">
        <attr name="min" format="integer" />
        <attr name="stepSize" format="integer" />
    </declare-styleable>
    <declare-styleable name="Carousel">
        <attr name="android:gravity" />
        <attr name="android:animationDuration" />
        <attr name="UseReflection" format="boolean"/>
        <attr name="Items" format="integer"/>
        <attr name="SelectedItem" format="integer"/>
        <attr name="maxTheta" format="float"/>
        <attr name="minQuantity" format="integer"/>
        <attr name="maxQuantity" format="integer"/>
        <attr name="Names" format="string" />
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="HashTagEditText">
        <attr name="horizontalSpacing" format="reference|dimension" />
        <attr name="verticalSpacing" format="reference|dimension" />
        <attr name="horizontalPadding" format="reference|dimension" />
        <attr name="verticalPadding" format="reference|dimension" />
        <attr name="maxSize" format="integer" />
        <attr name="bubbleTextColor" format="reference|color" />
        <attr name="bubbleTextSize" format="reference|dimension" />
        <attr name="bubbleBackground" format="reference|color" />
    </declare-styleable>

</resources>