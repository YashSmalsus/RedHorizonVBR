<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="GalleryImageDetailsActivityBinding"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfilePostsGallery.GalleryImageDetailsActivity"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/galleryPostsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backToUserProfileScreenActivity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_arrow"
                android:background="@color/white_transparent_80"/>

        </androidx.appcompat.widget.Toolbar>



        <ImageView
        android:id="@+id/galleryPostImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/nature_image_fifth"/>

    </RelativeLayout>

</layout>
