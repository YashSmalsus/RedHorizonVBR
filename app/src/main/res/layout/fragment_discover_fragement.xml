<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragments.Vbr_Fragment">

    <fragment
        android:id="@+id/discovermap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ProgressBar
        android:id="@+id/discoverUserLoader"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="50dp"
        android:visibility="gone"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/tierScreenTopView"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="@dimen/grid_specing"
        android:padding="@dimen/grid_specing"
        android:weightSum="2"
        android:background="@drawable/rounder_liniear_bg"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="Gender"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/gender_ic"
            android:gravity="center"
            android:textSize="@dimen/toolbar_title_text_size"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:text="Country"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="@dimen/toolbar_title_text_size"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:text="Tier Level"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/tier_level_ic"
            android:gravity="center"
            android:textSize="@dimen/toolbar_title_text_size"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tierScreenTopView"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="@dimen/grid_specing"
        android:padding="@dimen/grid_specing"
        android:weightSum="3"
        android:background="@drawable/rounded_white_bg_liniear"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="35dp"
            android:src="@drawable/facebook_invite"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:padding="@dimen/grid_specing"
            android:layout_height="35dp" />
        <ImageButton
            android:layout_width="35dp"
            android:padding="@dimen/grid_specing"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/insta_invite"
            android:layout_height="35dp" />
        <ImageButton
            android:layout_width="35dp"
            android:src="@drawable/twiiter_invite_ic"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:padding="@dimen/grid_specing"
            android:layout_height="35dp" />


    </LinearLayout>



</RelativeLayout>

