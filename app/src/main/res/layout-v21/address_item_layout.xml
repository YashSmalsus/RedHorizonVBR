<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="AddressItemBinding" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:elevation="@dimen/grid_specing"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/selectedCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/selectedCheckBox"
                android:orientation="vertical"
                android:padding="@dimen/fab_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ashwani"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_medium" />

                    <TextView
                        android:id="@+id/editButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_with_shadow"
                        android:paddingLeft="@dimen/fab_margin"
                        android:paddingTop="@dimen/grid_specing"
                        android:paddingRight="@dimen/fab_margin"
                        android:paddingBottom="@dimen/grid_specing"
                        android:text="Edit"
                        android:textColor="@color/colorPrimary" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/userHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:text="Ashwani"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/state_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashwani"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashwani"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>